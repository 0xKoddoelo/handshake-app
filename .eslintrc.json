{
  "extends": ["google", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "plugins": ["babel", "react", "prettier"],
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "require-jsdoc": 0,
    "max-len": "off",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "object-curly-spacing": ["error", "always"],
    "react/jsx-uses-vars": [2],
    "react/sort-comp": [2]
  }
}
